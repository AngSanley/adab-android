<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mDrawerLayout"
    tools:context=".ui.student.main.MainActivity"
    android:background="@color/slightlyWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Widget.Adab.Toolbar"
                app:navigationIcon="@drawable/ic_icon_menu">
                <TextView
                    android:textSize="20sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/home_title"/>

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_image_profile_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="8dp"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="end"
                    android:src="@drawable/ic_launcher_background"
                    android:background="?attr/selectableItemBackgroundBorderless"/>

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/adab_fragment">
        </FrameLayout>

    </LinearLayout>


    <!--app:menu="@menu/adab_navigation_drawer_menu"-->
    <!--app:itemIconTint="@drawable/drawer_icon_text_effect"-->
    <!--app:itemTextColor="@drawable/drawer_icon_text_effect"-->
    <!--app:itemBackground="@drawable/drawer_background_effect"-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:id="@+id/nv_adab"
        >
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:choiceMode="singleChoice"
            android:focusable="true"
            android:id="@+id/expandableListView"></ExpandableListView>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>