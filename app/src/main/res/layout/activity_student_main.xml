<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mDrawerLayout"
    tools:context=".ui.student.main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:paddingTop="50dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/adab_fragment"
            tools:background="@color/background">
        </FrameLayout>

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tool_bar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                style="@style/Widget.Adab.Toolbar"
                app:navigationIcon="@drawable/ic_icon_menu">

                <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/circle_image_profile_picture"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="5dp"
                    android:layout_gravity="end"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    app:lottie_fileName="animation.json"
                    app:lottie_autoPlay="true"
                    tools:padding="12dp"
                    tools:src="@mipmap/splash_logo"
                    app:lottie_speed="0.5"
                    />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>



    </RelativeLayout>


    <!--app:menu="@menu/adab_navigation_drawer_menu"-->
    <!--app:itemIconTint="@drawable/drawer_icon_text_effect"-->
    <!--app:itemTextColor="@drawable/drawer_icon_text_effect"-->
    <!--app:itemBackground="@drawable/drawer_background_effect"-->
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_gravity="start"
        android:id="@+id/nv_adab">
        <ExpandableListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@null"
            android:choiceMode="singleChoice"
            android:focusable="true"
            android:id="@+id/expandableListView"/>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>