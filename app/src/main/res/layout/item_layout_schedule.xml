<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_schedule_classTime"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/time"
        tools:text="11:20-13:00"/>

    <Space
        android:layout_width="16dp"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_schedule_classTitle"
            android:textSize="@dimen/text_caption"
            android:fontFamily="@font/interstate_bold"
            android:textColor="@android:color/black"
            tools:text="Storage"/>

        <TextView
            android:id="@+id/tv_schedule_course"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Mobile Object Oriented Programming" />

        <androidx.legacy.widget.Space
            android:layout_width="match_parent"
            android:layout_height="12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_schedule_classRoom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="711A" />

            <androidx.legacy.widget.Space
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_schedule_courseCode"
                tools:text="MOBI009"/>

            <androidx.legacy.widget.Space
                android:layout_width="12dp"
                android:layout_height="match_parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_schedule_classType"
                tools:text="LEC"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>