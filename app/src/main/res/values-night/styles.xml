<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Adab" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--Navigation Bar-->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:statusBarColor" tools:targetApi="27">#000000</item>
        <item name="android:navigationBarColor" tools:targetApi="27">#000000</item>

    </style>

    <!--Toolbar-->
    <style name="Widget.Adab.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_background</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/white_background</item>
    </style>

    <!-- Theme for splash screen -->
    <style name="Theme.Adab.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="27">true</item>
    </style>

    <style name="RoundedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/interstate_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

</resources>
