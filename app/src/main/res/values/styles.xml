<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Adab" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!--Color-->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

        <!--Font-->
        <item name="android:fontFamily">@font/interstate</item>
        <item name="fontFamily">@font/interstate</item>

        <!--Navigation Bar-->
        <item name="android:windowLightNavigationBar" tools:targetApi="27">true</item>
        <item name="android:statusBarColor" tools:targetApi="27">#ffffff</item>
        <item name="android:navigationBarColor" tools:targetApi="27">#ffffff</item>
    </style>

    <!--Toolbar-->
    <style name="Widget.Adab.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">@color/white_background</item>
        <item name="android:theme">@style/Theme.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <!--Divider-->
    <style name="Divider">
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:elevation">3dp</item>
    </style>

    <!--Button-->
    <style name="Button" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white_background</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">16dp</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <!--TextTitle-->
    <style name="TextTitle" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Theme for splash screen -->
    <style name="Theme.Adab.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="expanded_toolbar_title">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/interstate</item>
    </style>

    <style name="RoundedMaterialButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:letterSpacing">0</item>
        <item name="android:fontFamily">@font/interstate_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="cornerRadius">20dp</item>
        <item name="strokeWidth">1.5dp</item>
    </style>

</resources>
